---
import '../styles/entry.scss'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="ja" data-overlayscrollbars-initialize>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="nemutas private works." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/meta/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta property="og:type" content="website" />
    <meta name="og:image" content={import.meta.env.SITE + 'assets/meta/og-image.png'} />
    <meta property="og:url" content={import.meta.env.SITE} />
    <meta property="og:title" content={title} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@focru_ino" />
  </head>

  <body>
    <slot />
  </body>
</html>

<script src="../scripts/entry.ts"></script>
